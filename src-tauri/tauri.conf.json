{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pkr.ai",
  "version": "0.1.7",
  "identifier": "com.pkrai.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "pkr.ai",
        "width": 850,
        "height": 120,
        "minWidth": 600,
        "minHeight": 80,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "center": true,
        "visible": true,
        "hiddenTitle": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["info.plist", "pkr-ai.desktop"],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:pkrai.db"]
    },
    "updater": {
      "endpoints": [],
      "pubkey": ""
    }
  }
}